<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="hu.bme.aut.android.tetris_elao0e">

    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/start_o"
        android:label="@string/app_name"
        android:roundIcon="@drawable/start_o"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tetris_ELAO0E"
        tools:targetApi="31">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ConfigActivity"
            android:exported="false" />
        <activity
            android:name=".ResultRecordActivity"
            android:exported="false"
            android:launchMode="singleInstance" />
        <activity
            android:name=".ResultNorecordActivity"
            android:exported="false"
            android:launchMode="singleInstance" />
        <activity
            android:name=".MenuActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".TableActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>